generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Snippet {
  id          String   @id @default(uuid())
  title       String
  description String?
  code        String
  language    String
  tags        Tag[]
  notes       String?
  resources   String?
  isFavorite  Boolean  @default(false)
  
  // Sharing features
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  visibility  String   @default("public") // 'public', 'private', 'unlisted'
  shortCode   String   @unique
  viewCount   Int      @default(0)
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([language])
  @@index([isFavorite])
  @@index([userId])
  @@index([visibility])
  @@index([shortCode])
}

model Tag {
  id        String    @id @default(uuid())
  name      String    @unique
  color     String?
  snippets  Snippet[]
  createdAt DateTime  @default(now())

  @@index([name])
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  phone     String?  @unique
  name      String?
  
  // Profile fields
  username  String?  @unique
  bio       String?
  avatar    String?
  website   String?
  githubUrl String?
  twitterUrl String?
  
  snippets    Snippet[]
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([email])
  @@index([phone])
  @@index([username])
}